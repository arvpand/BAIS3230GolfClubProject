<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-with" charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <!-- Address Bar/Browser Tab Favourit Icon - /wwwroot/images -->
    @* <link rel="icon" href="~/Images/BAISTFavoritesIcon.ico" type="image/x-icon" /> *@
    <!-- /wwwroot/css -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@100;300&display=swap" rel="stylesheet">
    <link href="~/css/main.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/styles.css" rel="stylesheet" asp-append-version="true" />

    <script type="text/javascript"></script>
    @RenderSection("scriptContent", required: false)
</head>

<body>
    <div class=" grid-cols-1 grid-rows-3">
        <header>
            <nav class=" flex items-center justify-between z-10">
                <h1 class=" text-6xl"><a href="~/Index">BAISTGolfClubSystem</a></h1>
                <ul>
                    <li><a href="~/Index">Home</a></li>
                    <li><a href="~/GolfCourse">Golf Course</a></li>
                    <li><a href="~/About">About</a></li>
                </ul>
            </nav>
            @if (ViewData["Title"] == "Home")
            {
                <section class=" absolute top-0 left-0 z-0">
                    <img src="~/img/pexels-madison-wooley-5005974.jpg" alt=""
                        class=" object-cover h-screen w-screen object-center">
                </section>
            }
        </header>
        <main>
            @RenderBody()
        </main>
        <footer>
            <small>&copy; Copyright 2020 - @DateTime.Now.Year </small>
        </footer>
        @* <script src="~/libraries/js/validation.js"></script> *@
    </div>
</body>

</html>